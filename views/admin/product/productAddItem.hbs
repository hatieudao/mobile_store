<form class="container" id="addProductForm" action="/admin/product/add">
    <div class="admin-container-content">
        <header class="admin-container-content-header">
            <h1 class="row py-4 text-primary admin-container-content-header__title">
                Thêm sản phẩm
            </h1>
        </header>
        <div class="">
            <div class="">
                <div class="row justify-content-end">
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary shadow-none" data-toggle="modal">
                            <i class="fa fa-pencil"></i>
                            Thêm mới
                        </button>
                    </div>
                </div>
            </div>
            <div class="">
                <div class="row justify-content-center">
                    <h2 class="row py-4 text-secondary">
                        Sản phẩm
                    </h2>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="row align-items-center">
                            <div class="col-lg-3 py-2">
                                Tên sản phẩm
                            </div>
                            <div class="col-lg-9 py-2">
                                <input class="form-control shadow-none" name="fullName" type="text" placeholder="Tên sản phẩm">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="row align-items-center">
                            <div class="col-lg-3 py-2">
                                Giá
                            </div>
                            <div class="col-lg-9 py-2">
                                <input class="form-control shadow-none" name="price" type="number" step="0.01" min="0" placeholder="Giá"> 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="row align-items-center">
                            <div class="col-lg-3 py-2">
                                Rating
                            </div>
                            <div class="col-lg-9 py-2">
                                <input class="form-control shadow-none" name="rating" type="number" step="0.01" min="0" placeholder="Rating"> 
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
            <div class="">
                <div class="row justify-content-center">
                    <h2 class="row py-4 text-secondary">
                        Thương hiệu
                    </h2>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="row align-items-center">
                            <div class="col-lg-3 py-2">
                                Tên thương hiệu
                            </div>
                            <div class="col-lg-9 py-2 d-flex justify-content-between dropdown-menu-group">
                                <input name="brandName" type="text" class="form-control shadow-none" aria-label="Text input with dropdown button" placeholder="Tên thương hiệu"
                                    {{#if filter.brandName}}
                                       value="{{filter.brandName}}"
                                    {{/if}}
                                >
                                <div class="">
                                    <button class="btn btn-outline-secondary dropdown-toggle shadow-none" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        {{#each brandNames}}
                                            <li class="dropdown-item">{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="">
                <div class="row justify-content-center">
                    <h2 class="row py-4 text-secondary">
                        Configuration
                    </h2>
                </div>
                <button id="addConfigurationRow" type="button" class="btn btn-primary shadow-none">
                    <i class="fa fa-pencil"></i>
                    Thêm mới
                </button>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="row align-items-center">
                            <div class="row py-4">
                                <table class="table table-bordered admin-table">
                                    <thead class="admin-table-thead">
                                    <tr>
                                        <th>
                                            Giá trị
                                        </th>
                                        <th>
                                            Specification
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody class="admin-table-tbody" id="configurationTable">

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="">
                <div class="row justify-content-center">
                    <h2 class="row py-4 text-secondary">
                        Options
                    </h2>
                </div>
                <button id="addOptionRow" type="button" class="btn btn-primary shadow-none">
                    <i class="fa fa-pencil"></i>
                    Thêm Option
                </button>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="row align-items-center">
                            <div class="row py-4">
                                <table class="table table-bordered admin-table">
                                    <thead class="admin-table-thead">
                                    <tr>
                                        <th>
                                            Tên
                                        </th>
                                        <th>
                                            Giá
                                        </th>
                                        <th>
                                            Capacity
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody class="admin-table-tbody" id="optionTable">

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

{{#section 'script'}}

    <script>

        let countConfiguration = 0;
        let countOption = 0;

        $('#addConfigurationRow').click(function (){
            console.log("addConfigurationRow");

            const configurationRow =
                `<tr>
                    <td>
                        <input class="form-control shadow-none" name="configurations[${countConfiguration}][configurationValue]" type="text" placeholder="Giá trị">
                    </td>
                    <td>
                        <div class="d-flex justify-content-between dropdown-menu-group">
                            <input name="configurations[${countConfiguration}][specificationName]" type="text" class="form-control shadow-none" aria-label="Text input with dropdown button" placeholder="Giá trí">
                        </div>
                    </td>
                </tr>`

            $('#configurationTable').append(configurationRow);
            countConfiguration++;
        })

        $('#addOptionRow').click(function (){
            console.log("addOptionRow");

            const optionRow =
                    `<tr>
                    <td>
                        <input class="form-control shadow-none" name="options[${countOption}][optionName]" type="text" placeholder="Giá trị">
                    </td>
                    <td>
                        <div class="d-flex justify-content-between dropdown-menu-group">
                            <input name="options[${countOption}][optionPrice]" type="text" class="form-control shadow-none" aria-label="Text input with dropdown button" placeholder="Giá trí">
                        </div>
                    </td>
                    <td>
                        <div class="d-flex justify-content-between dropdown-menu-group">
                            <input name="options[${countOption}][capacityName]" type="text" class="form-control shadow-none" aria-label="Text input with dropdown button" placeholder="Giá trí">
                        </div>
                    </td>
                </tr>`

            $('#optionTable').append(optionRow);
            countOption++;
        })

    </script>
    <script src="/adminStyle/js/filterSelect.js"></script>

{{/section}}
